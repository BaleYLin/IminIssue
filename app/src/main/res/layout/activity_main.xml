<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/qrCode58Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="58mm QR Code"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/qrCode80Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="80 mm QR Code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/taiwanInvoiceBufferButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TIWAN INVOICE (BUFFER)"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/qrCode58Button" />

    <Button
        android:id="@+id/taiwanInvoiceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TIWAN INVOICE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/taiwanInvoiceBufferButton" />

</androidx.constraintlayout.widget.ConstraintLayout>